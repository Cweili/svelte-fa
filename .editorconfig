# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.ejs]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.less]
indent_style = space
indent_size = 2

[*.styl]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2

[*.eslintrc]
indent_style = space
indent_size = 2
